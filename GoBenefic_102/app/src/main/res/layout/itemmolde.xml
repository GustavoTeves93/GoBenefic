<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/contact_item_id">


    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="wrap_content"
        android:layout_height="326dp"
        app:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">


            <LinearLayout
                android:id="@+id/email_login_form"
                android:layout_width="match_parent"
                android:layout_height="304dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgMolde"
                    android:layout_width="match_parent"
                    android:layout_height="245dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:foregroundGravity="left"
                    app:srcCompat="@drawable/tel" />

                <TextView
                    android:id="@+id/txtDescriMolde"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/imgMolde"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/imgMolde"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp"
                    android:text="Descripcion..."
                    android:textSize="12sp"
                    tools:ignore="NotSibling" />

                <ImageView
                    android:id="@+id/imageLinea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    app:srcCompat="@drawable/linea" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="33dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_toStartOf="@+id/txtComparte"
                        app:srcCompat="@drawable/conec" />

                    <TextView
                        android:id="@+id/txtComparte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:paddingBottom="1dp"
                        android:paddingTop="1dp"
                        android:text="Compartir"
                        android:textSize="12sp"
                        tools:ignore="NotSibling" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="35dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="118dp"
                        app:srcCompat="@drawable/search" />

                    <TextView
                        android:id="@+id/txtBuscar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imageView2"
                        android:paddingBottom="1dp"
                        android:paddingTop="1dp"
                        android:text="Visualizar"
                        android:textSize="12sp"
                        tools:ignore="NotSibling" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        app:srcCompat="@drawable/like">

                    </ImageView>

                    <TextView
                        android:id="@+id/txtSeguimiento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="38dp"
                        android:paddingBottom="1dp"
                        android:paddingTop="1dp"
                        android:text="Seguimiento"
                        android:textSize="12sp"
                        tools:ignore="NotSibling" />
                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>